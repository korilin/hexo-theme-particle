
@font-face
    font-family 'Mulish'
    src url('../css/fonts/Mulish.ttf')

@font-face
    font-family 'NotoSansJP-Bold'
    src url('../css/fonts/NotoSansJP-Bold.otf')

@font-face
    font-family 'NotoSansJP-Regular'
    src url('../css/fonts/NotoSansJP-Regular.otf')

body
    background body-background
    width 100%
    font-family 'NotoSansJP-Regular', 'Mulish', 'Microsoft YaHei', sans-serif

*
    margin 0
    padding 0
    word-break break-all
    word-wrap break-word

ul, ol
    margin 15px 0
    line-height 1.7

h3
    margin 15px 0

p
    margin 15px 0
    line-height 1.7

a
    text-decoration none

.icon
    margin-right 5px
    color #5c6b72