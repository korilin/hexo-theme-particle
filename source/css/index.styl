
#home-head
    width 100%
    height 100vh
    position relative
    display flex
    top 0
    left 0
    z-index 100
    background-image url('../home.jpg')
    background-repeat no-repeat
    background-size cover

    .home-info
        position relative
        margin auto

        .info
            position absolute
            display flex
            top -40px
            align-items center
            justify-content center
            text-align center
            color #333333
            border-radius 50%

        .loop:nth-child(1)
            border-radius 38% 62% 63% 37% / 41% 44% 56% 59%
            background #ffffff
            opacity 0.3
            transform rotate(30deg)
            animation loop1 10s linear infinite

        .loop:nth-child(2)
            border-radius 38% 62% 63% 37% / 41% 44% 56% 59%
            background #ffffff
            opacity 0.45
            transform rotate(60deg)
            animation loop2 15s linear infinite

        .loop:nth-child(3)
            border-radius 38% 62% 63% 37% / 41% 44% 56% 59%
            opacity 0.3
            background #ffffff
            transform rotate(90deg)
            animation loop3 10s linear infinite

        .loop:nth-child(4)
            border-radius 38% 62% 63% 37% / 41% 44% 56% 59%
            opacity 0.45
            background #ffffff
            transform rotate(120deg)
            animation loop4 15s linear infinite

@keyframes loop1
    0%
        transform rotate(30deg)

    100%
        transform rotate(390deg)

@keyframes loop2
    0%
        transform rotate(60deg)

    100%
        transform rotate(420deg)

@keyframes loop3
    0%
        transform rotate(90deg)

    100%
        transform rotate(450deg)

@keyframes loop4
    0%
        transform rotate(120deg)

    100%
        transform rotate(480deg)

#home-posts-wrap
    position relative
    display flex
    width 100%
    align-items center
    justify-content center

#home-posts
    position relative
    background white
    border-radius 10px
    z-index 101
    margin auto

    h2
        text-align center
        color default-link
        text-decoration none

    .post
        position relative
        border-radius 20px
        box-shadow 1px 3px 10px rgba(0, 0, 0, 0.039)
        transition box-shadow 0.4s ease-out

        &:hover
            box-shadow 3px 9px 20px rgba(0, 0, 0, 0.039)

        a
            text-decoration none

        .category-and-date
            width 100%
            margin-top 15px
            color label-font
            text-align center

            ion-icon
                position relative
                top 3px
                margin-right 5px

            .category
                display inline-block
                margin-right 25px

                a
                    color label-font

            .date
                display inline-block

        .excerpt
            color text-font

        .post-tags
            a
                color #ffbbf4
                font-size 14px

            .tag
                ion-icon
                    position relative
                    top 3px
                    color label-font

                display inline-block
                margin-right 10px
                font-weight bold

        .go-post
            background go-post
            border 0
            padding 10px 24px
            color white
            font-weight bold
            border-radius 20px 0
            font-size 14px
            position absolute
            bottom -5px
            right -5px
            transition all 0.2s ease-out
            box-shadow 2px 2px 10px 0px #ffbbf47a

            &:hover
                right -7px
                box-shadow -2px -2px 10px 0px #9abbf77a

    .page-current
        display flex
        width 100%
        align-items center
        justify-content center
        color #999999
        margin-top 50px

        .prev, .next
            width 50px
            text-align center

            ion-icon
                position relative
                top 3px

        .page-index
            width 300px
            text-align center
            font-weight blod

        .current
            color #da0a51

        a
            color #999999
            text-decoration none

        .page-num, .current, .page-omit
            display inline-block
            width 25px
            height 25px
            border-radius 5px
            line-height 25px
            padding 5px
            margin 0 7px

        .page-num:hover
            background page-index-active
            color white