@media (min-width 900px)
    #menu
        .desktop-menu
            display block

        .phone-menu
            display none

    #home-head
        .home-info
            width 500px
            height 500px

            .loop
                position absolute
                width 500px
                height 500px
                display inline-block

            .info
                width 500px
                height 500px

                .wrap
                    padding 50px

                    h1
                        font-size 52px
                        font-weight bold
                        font-family 'Hensa'
                        margin-top 25px

                    h3
                        font-size 24px
                        margin-top 20px

                    h5
                        font-size 16px
                        margin-top 40px

    ul, ol
        padding-left 40px

    #home-posts
        width 800px
        padding 30px 50px

        .post
            padding 50px 50px
            margin 25px 0

            .excerpt
                padding 20px 0

    .article
        width 900px

        .content
            .language
                right 80px

    #archives, .categories-tags
        width 900px

    footer
        .footer-wrap
            width 900px

@media (max-width 900px)
    #menu
        .desktop-menu
            display none

        .phone-menu
            display block

    #home-head
        .home-info
            width 350px
            height 350px

            .loop
                position absolute
                width 350px
                height 350px
                display none

            .info
                width 300px
                height 300px
                background #ffffffa6
                padding 25px

                .wrap
                    padding 25px

                    h1
                        font-size 46px
                        font-weight bold
                        font-family 'Hensa'
                        margin-top 15px

                    h3
                        font-size 20px
                        margin-top 15px

                    h5
                        font-size 14px
                        margin-top 30px

    ul, ol
        padding-left 20px

    .el-timeline
        padding-left 0

        .el-timeline-item__wrapper
            padding-left 18px

            .el-card__body
                padding 10px 20px

    #home-posts
        width 95%
        padding 20px 0

        .post
            padding 20px 50px
            margin 30px 0

            .excerpt
                padding 20px 0

    .article
        width 85%

        .content
            .language
                right 10%

    #archives, .categories-tags
        width 90%

    footer
        .footer-wrap
            width 100%